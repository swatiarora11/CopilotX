{
	"type": "AdaptiveCard",
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"version": "1.5",
	"body": [
	  {
		"type": "TextBlock",
		"text": "Ticket Overview",
		"weight": "Bolder",
		"size": "Large",
		"separator": true,
		"spacing": "Medium"
	  },              
	  {
		"type": "Container",
		"items": [
		  {
			"type": "TextBlock",
			"text": "Asset Name",
			"weight": "Bolder",
			"spacing": "Small"
		  },
		  {
			"type": "TextBlock",
			"text": "${if(results.assetName, results.assetName, 'N/A')}",
			"wrap": true
		  }
		]
	  },
	  {
		"type": "Container",
		"items": [
		  {
			"type": "TextBlock",
			"text": "Ticket Name",
			"weight": "Bolder",
			"spacing": "Small"
		  },
		  {
			"type": "TextBlock",
			"text": "${if(results.ticketName, results.ticketName, 'N/A')}",
			"wrap": true
		  }
		]
	  },
	  {
		"type": "Container",
		"items": [
		  {
			"type": "TextBlock",
			"text": "User Name",
			"weight": "Bolder",
			"spacing": "Small"
		  },
		  {
			"type": "TextBlock",
			"text": "${if(results.userName, results.userName, 'N/A')}",
			"wrap": true
		  }
		]
	  },
	  {
		"type": "Container",
		"items": [
		  {
			"type": "TextBlock",
			"text": "Remaining Forecast",
			"weight": "Bolder",
			"spacing": "Small"
		  },
		  {
			"type": "TextBlock",
			"text": "${if(results.remainingForecast, results.remainingForecast, 'N/A')}",
			"wrap": true
		  }
		]
	  },
	  {
		"type": "Container",
		"items": [
		  {
			"type": "TextBlock",
			"text": "Message",
			"weight": "Bolder",
			"spacing": "Small"
		  },
		  {
			"type": "TextBlock",
			"text": "${if(results.message, results.message, 'N/A')}",
			"wrap": true
		  }
		]
	  }            
	]          
  }

